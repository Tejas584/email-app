<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="icon" href="/images/favicon.ico" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <main class="container">

    <!-- Upload File Section -->
    <section class="upload-section">
      <form id="upload-form" action="/recipients" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="file">
            <i class="fa-solid fa-cloud-arrow-up fa-lg"></i>
            Upload Recipients (CSV, TXT, XLSX, XLS, JSON):
          </label>          
          <input type="file" id="file" name="file" accept=".csv, .txt, .xlsx, .xls, .json" />
        </div>
      </form>
    </section>


    <div class="email-form-section"> 
    <!-- Email Form Section -->
    <section class="email-form-section">
      <form id="email-form" action="/send-email" method="post">
        <div class="email-form">
        <!-- SMTP Credentials -->
        <fieldset class="form-group smtp-credentials">
          <legend><i class="fa-solid fa-server"></i> SMTP Credentials</legend>

          <label for="smtp-host">SMTP Hostname or IP Address</label>
          <input type="text" id="smtp-host" name="smtp-host" placeholder="Enter SMTP Host" />

          <label for="smtp-port">SMTP Port</label>
          <input type="text" id="smtp-port" name="smtp-port" placeholder="Enter SMTP Port" />

          <label for="smtp-user">SMTP User</label>
          <input type="text" id="smtp-user" name="smtp-user" placeholder="Enter SMTP User" />

          <label for="smtp-pass">SMTP Password</label>
          <div style="position:relative;display:flex;align-items:center;">
            <input type="password" id="smtp-pass" name="smtp-pass" placeholder="Enter SMTP Password" style="flex:1;" />
            <button type="button" id="toggle-smtp-pass" tabindex="-1" style="color:black;background:none;border:none;position:absolute;right:10px;top:50%;transform:translateY(-50%);cursor:pointer;outline:none;padding:0;">
              <i id="smtp-pass-eye" class="fa-solid fa-eye"></i>
            </button>
          </div>

          
        </fieldset>

        <!-- Email Configuration -->
        <fieldset class="form-group email-config">
          <legend><i class="fa-solid fa-envelope"></i> Email Configuration</legend>

          <label for="smtp-from-email">From Email</label>
          <input type="text" id="smtp-from-email" name="smtp-from-email" placeholder="Enter SMTP From Email" />

          <label for="subject">Subject</label>
          <input type="text" id="subject" name="subject" placeholder="Enter Subject" />

          <label for="smtp-from-name">From Name</label>
          <input type="text" id="smtp-from-name" name="smtp-from-name" placeholder="Enter SMTP From Name" />

          

          <label for="test-recp">Test Recipients (Only for Test)</label>
          <textarea id="test-recp" name="test-recp" placeholder="Enter Test Recipients"></textarea>

          <div class="radio-group">
            <span>Test or Bulk:</span><br />
            <input type="radio" id="test" name="test-bulk" value="Test" />
            <label for="test">Test</label>

            <input type="radio" id="bulk" name="test-bulk" value="Bulk" />
            <label for="bulk">Bulk</label>
          </div>

          

          

          

          

          
          <div class="radio-group">
            <span>Message Type:</span><br />
            <input type="radio" id="plain" name="plain-html" value="Plain" />
            <label for="plain">Plain</label>

            <input type="radio" id="html" name="plain-html" value="HTML" />
            <label for="html">HTML</label>
          </div>
          <label for="message">Message/HTML</label>
          <textarea id="message" name="message" placeholder="Enter Message"></textarea>

          
          
          <label for="limit">Limit</label>
          <input type="number" id="limit" name="limit" placeholder="Enter Limit" />

          <div class="form-actions">
            <button type="submit"><i class="fa-solid fa-paper-plane"></i> Send Email</button>
            <button type="button" id="preview-html"><i class="fa-solid fa-eye"></i> Preview Message/HTML</button>
            <button type="button" id="Download-log"><i class="fa-solid fa-download"></i> Download Log</button>
            <button type="button" id="delete-log" style="background-color: crimson;color: white;"><i class="fa-solid fa-trash"></i> Delete Log</button>
            <button type="button" id="info"><i class="fa-solid fa-circle-info"></i> Info</button>
          </div>
        </fieldset>

        <!-- Action Buttons -->
        
      </div>
        
      </form>
    </section>
    
        <!-- Status Display -->
        <section class="status-section">
          <fieldset class="status">
            <legend><i class="fa-solid fa-chart-line"></i> Live Status</legend>
            <p><i class="fa-solid fa-list"></i> Total: <span id="total">0</span></p>
            <p><i class="fa-solid fa-clock"></i> Queue: <span id="queue">0</span></p>
            <p><i class="fa-solid fa-swatchbook"></i> Limit: <span id="total-sending">0</span></p>
            <p><i class="fa-solid fa-paper-plane"></i> Live sending: <span id="limit">0</span></p>
            <p><i class="fa-solid fa-hourglass-half"></i> Pending: <span id="pending">0</span></p>
            <p><i class="fa-solid fa-paper-plane"></i>Total Sent: <span id="sent">0</span></p>
            <p><i class="fa-solid fa-circle-exclamation"></i>Total Failed: <span id="failed">0</span></p>
          </fieldset>
          <section class="errors-section">
            <p><i class="fa-solid fa-bug"></i> Errors: <span id="errors" style="color:red;font-weight:bold;"></span></p>
          </section>
        </section>
      </div>
  </main>
  <script src="/js/recipents-upload.js"></script>
</body>
</html>
