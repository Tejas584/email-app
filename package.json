{
  "name": "bulk-email-sender",
  "version": "1.0.0",
  "description": "A bulk email sender application with file upload, SMTP configuration, and real-time status tracking",
  "main": "app.js",
  "scripts": {
    "start": "dotenvx run -- concurrently \"node app.js\" \"node workprocess/mailer.js\"",
    "dev": "dotenvx run -- concurrently \"node app.js\" \"node workprocess/mailer.js\"",
    "app": "dotenvx run -- node app.js",
    "worker": "dotenvx run -- node workprocess/mailer.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-smtp": "node test-smtp.js"
  },
  "keywords": [
    "email",
    "bulk",
    "smtp",
    "nodemailer",
    "redis",
    "bull"
  ],
