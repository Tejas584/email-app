    "body-parser": "^2.2.0",
    "bull": "^4.16.5",
    "concurrently": "^9.2.0",
    "csv-parse": "^6.1.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "uuid": "^10.0.0",
    "xlsx": "^0.18.5"
  }
